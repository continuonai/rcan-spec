    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .next-title {
    display: block;
    font-weight: 600;
    color: var(--color-accent);
  }

  @media (max-width: 600px) {
    .next-links {
      grid-template-columns: 1fr;
    }
  }
</style>
